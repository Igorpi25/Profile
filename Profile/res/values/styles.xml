<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="style_button_dialog" parent="@android:style/Widget.Button">
    	<item name="android:background">@drawable/drawable_button_dialog_normal</item>
        <item name="android:width">@dimen/widget_width_medial</item>
        <item name="android:height">@dimen/widget_height</item>
        <item name="android:textColor">@color/color_selector_font</item>    
    </style>
        
    <style name="style_edittext_dialog" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/drawable_edittext</item>
        <item name="android:textColorHint">@color/color_gray_light</item>
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:padding">@dimen/widget_edittext_padding</item>
        <item name="android:width">@dimen/widget_width_long</item>
        <item name="android:height">@dimen/widget_height</item>

    </style>

</resources>
